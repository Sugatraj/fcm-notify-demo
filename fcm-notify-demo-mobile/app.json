{
  "expo": {
    "name": "FCM Notify Demo",
    "slug": "fcm-notify-demo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sugatraj.fcmnotifydemo",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.sugatraj.fcmnotifydemo",
      "googleServicesFile": "./google-services.json",
      "permissions": ["NOTIFICATIONS"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/sounds/new-order.wav",
            "./assets/sounds/order-ready.wav",
            "./assets/sounds/order-cancelled.wav"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ad0e432e-2f27-458e-9deb-12c38ca899a6"
      }
    },
    "owner": "sugatraj"
  }
} 